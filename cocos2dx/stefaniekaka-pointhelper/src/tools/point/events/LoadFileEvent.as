package tools.point.events 
{
	import flash.events.Event;
	import tools.point.utils.Metadata;
	
	/**
	 * 装载文件事件
	 * @author Zhenyu Yao
	 */
	public class LoadFileEvent extends Event 
	{
		
////////////////////////////////////////////////////////////////////////////////////////////////////
// 事件类型定义
////////////////////////////////////////////////////////////////////////////////////////////////////
		
		/// 装载文件完成事件
		public static const COMPLETE : String = "Complete";

////////////////////////////////////////////////////////////////////////////////////////////////////
// Properties
////////////////////////////////////////////////////////////////////////////////////////////////////
		
		/// 元数据
		public function get metadata() : Metadata
		{
			return m_metadata.copy();
		}

////////////////////////////////////////////////////////////////////////////////////////////////////
// Public Functions
////////////////////////////////////////////////////////////////////////////////////////////////////
		
		/**
		 * 构造函数
		 * @param	type 事件类型
		 * @param	metadata 元数据
		 * @author Zhenyu Yao
		 */
		public function LoadFileEvent(type : String, metadata : Metadata) 
		{ 
			super(type);
			m_metadata = metadata;
		} 
		
////////////////////////////////////////////////////////////////////////////////////////////////////
// Override Functiions
////////////////////////////////////////////////////////////////////////////////////////////////////
		
		public override function clone() : Event 
		{ 
			return new LoadFileEvent(type, m_metadata);
		} 
		
////////////////////////////////////////////////////////////////////////////////////////////////////
// Private Vars
////////////////////////////////////////////////////////////////////////////////////////////////////
		
		private var m_metadata : Metadata = null;
	}
	
}

