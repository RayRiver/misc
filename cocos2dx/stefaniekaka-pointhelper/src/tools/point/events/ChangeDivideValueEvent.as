package tools.point.events 
{
	import flash.events.Event;
	
	/**
	 * 改变除值事件
	 * @author Zhenyu Yao
	 */
	public class ChangeDivideValueEvent extends Event 
	{
		
////////////////////////////////////////////////////////////////////////////////////////////////////
// 事件类型定义
////////////////////////////////////////////////////////////////////////////////////////////////////
		
		/// 改变除值事件类型
		public static const CHANGE_DIVIDE_VALUE	: String = "ChangeDivideValue";

////////////////////////////////////////////////////////////////////////////////////////////////////
// Properties
////////////////////////////////////////////////////////////////////////////////////////////////////
		
		/**
		 * 除值
		 * @author Zhenyu Yao
		 */
		public function get divideValue() : Number
		{
			return m_divideValue;
		}

////////////////////////////////////////////////////////////////////////////////////////////////////
// Public functions
////////////////////////////////////////////////////////////////////////////////////////////////////
		
		/**
		 * 构造函数
		 * @param	type 事件类型
		 * @param	divideValue 除值
		 */
		public function ChangeDivideValueEvent(type : String, divideValue : Number) 
		{ 
			super(type);
			m_divideValue = divideValue;
		} 
		
////////////////////////////////////////////////////////////////////////////////////////////////////
// Override Function
////////////////////////////////////////////////////////////////////////////////////////////////////
		
		public override function clone():Event 
		{ 
			return new ChangeDivideValueEvent(type, m_divideValue);
		} 
		
////////////////////////////////////////////////////////////////////////////////////////////////////
// Private vars
////////////////////////////////////////////////////////////////////////////////////////////////////
		
		private var m_divideValue : Number = NaN;
	}
	
}

